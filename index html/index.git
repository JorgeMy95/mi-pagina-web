    <script>
        const slide = document.querySelector('.carousel-slide');
        const items = document.querySelectorAll('.carousel-item');
        const indicators = document.querySelectorAll('.indicator');

        let currentIndex = 0;

        function updateIndicators(index) {
            indicators.forEach((indicator, i) => {
                indicator.classList.toggle('active', i === index);
            });
        }

        function moveSlide(step) {
            currentIndex = (currentIndex + step + items.length) % items.length;
            
            slide.style.transform = `translateX(-${currentIndex * 100}%)`;
            updateIndicators(currentIndex);
        }

        function moveToSlide(index) {
            currentIndex = index;
            slide.style.transform = `translateX(-${index * 100}%)`;
            updateIndicators(index);
        }

        updateIndicators(currentIndex);
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const predefinedTasks = [
                "Comprar los cortes de carne necesarios.",
                "Preparar los adobos o marinados para la carne.",
                "Encender el carb칩n o la le침a.",
                "Limpieza de la parrilla.",
                "Precalentar la parrilla antes de usar.",
                "Colocar los cortes m치s gruesos primero.",
                "Supervisar los tiempos de cocci칩n.",
                "Cortar la carne para servir.",
                "Preparar las guarniciones (ensaladas, salsas, pan, etc.).",
                "Servir y disfrutar con los invitados."
            ];

            const taskList = document.getElementById("task-list");
            
            predefinedTasks.forEach(taskText => {
                const taskItem = document.createElement("li");
                taskItem.textContent = taskText;

                const taskButtons = document.createElement("div");
                taskButtons.className = "task-buttons";

                const completeButton = document.createElement("button");
                completeButton.textContent = "Completado";
                completeButton.className = "complete-btn";
                completeButton.addEventListener("click", () => {
                    taskItem.classList.toggle("completed");
                });

                const deleteButton = document.createElement("button");
                deleteButton.textContent = "Eliminar";
                deleteButton.className = "delete-btn";
                deleteButton.addEventListener("click", () => {
                    taskItem.remove();
                });

                taskButtons.appendChild(completeButton);
                taskButtons.appendChild(deleteButton);
                taskItem.appendChild(taskButtons);

                taskList.appendChild(taskItem);
            });
        });
    </script>
    

</body>
</html>
